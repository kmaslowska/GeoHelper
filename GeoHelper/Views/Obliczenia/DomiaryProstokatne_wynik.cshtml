@model GeoHelper.Models.DomiaryViewModel

@{
    ViewData["Title"] = "Obliczanie współrzędnych punktu metodą domiarów prostokątnych";
}

<h2>Wynik obliczeń</h2>

<div class="row">
    <div class="col-md-7 col-xs-12 text-center" style="float:right;">
        <img src="~/images/test.jpg" alt="Sample Photo" width="300" height="300" />
    </div>
    <div class="col-md-4 col-xs-12">
        <h4>Punkt A</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Nazwa")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.name1)
            </dd>
            <dt>
                @Html.DisplayName("x")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.x1)
            </dd>
            <dt>
                @Html.DisplayName("y")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.y1)
            </dd>
        </dl>
        <h4>Punkt B</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Nazwa")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.name2)
            </dd>
            <dt>
                @Html.DisplayName("x")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.x2)
            </dd>
            <dt>
                @Html.DisplayName("y")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.y2)
            </dd>
        </dl>
        <div>
            <h4>Domiary</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Położenie punktu")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.selectedTypeOfPoint)
                </dd>
                <dt>
                    @Html.DisplayName("Odległość A -  N'")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.distance1NPrim)  
                </dd>
                <dt>
                    @Html.DisplayName("Odległość N' - N") 
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.distance1NPrim) 
                </dd>
            </dl>
        </div>
        <div>
            <h4>Wynik obliczeń - współrzędne punktu N</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("X")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.calculatedY)
                </dd>
                <dt>
                    @Html.DisplayName("Y")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.calculatedY)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-action="DomiaryProstokatne">Wykonaj obliczenia ponownie</a>
</div>
