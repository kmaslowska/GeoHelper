@model GeoHelper.Models.BiegunowaViewModel

@{
    ViewData["Title"] = "Obliczanie współrzędnych punktu metodą biegunową";
}

<h2>Wynik obliczeń</h2>

<div class="row">
    <div class="col-md-7 col-xs-12 text-center" style="float:right;">
        <h3><font color="#800000">Metoda biegunowa</font></h3>
        <img src="~/images/biegunowa.png" alt="Metoda biegunowa" width="400" height="400" />
    </div>
    <div class="col-md-4 col-xs-12">
        <h4>Punkt A</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Nazwa")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.name1)
            </dd>
            <dt>
                @Html.DisplayName("x")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.x1)
            </dd>
            <dt>
                @Html.DisplayName("y")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.y1)
            </dd>
        </dl>
        <h4>Punkt B</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Nazwa")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.name2)
            </dd>
            <dt>
                @Html.DisplayName("x")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.x2)
            </dd>
            <dt>
                @Html.DisplayName("y")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.y2)
            </dd>
        </dl>
        <h4>Punkt C</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Nazwa")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.name3)
            </dd>
            <dt>
                @Html.DisplayName("x")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.x3)
            </dd>
            <dt>
                @Html.DisplayName("y")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.y3)
            </dd>
        </dl>
        <div>
            <h4>Kierunki</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Kierunek P")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.kierunek1P)  g
                </dd>
                <dt>
                    @Html.DisplayName("Kierunek B") 
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.kierunek12) g
                </dd>
                <dt>
                    @Html.DisplayName("Kierunek C")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.kierunek13) g
                </dd>
            </dl>
        </div>
        <div>
            <h4>Odległości</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Odległość AP")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.distance1P)
                </dd>
            </dl>
        </div>
        <div>
            <h4>Wynik obliczeń - współrzędne punktu P</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("X")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.calculatedY)
                </dd>
                <dt>
                    @Html.DisplayName("Y")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.calculatedY)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-action="MetodaBiegunowa">Wykonaj obliczenia ponownie</a>
</div>
